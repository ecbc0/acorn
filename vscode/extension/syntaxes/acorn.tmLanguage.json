{
  "name": "Acorn",
  "fileTypes": ["ac"],
  "scopeName": "source.acorn",
  "patterns": [
    {
      "match": "//.*$",
      "name": "comment.line.double-slash"
    },
    {
      "match": "\\b(if|else|by)\\b",
      "name": "keyword.control"
    },
    {
      "match": "\\b(and|or|not|implies|iff|forall|exists)\\b|!",
      "name": "keyword.logic_operator"
    },
    {
      "match": "-|>|<|\\+|=|\\*|/|\\^|⋅",
      "name": "keyword.operator"
    },
    {
      "match": "∪|∩|×|∈|∉|⊆|⊇|∖",
      "name": "keyword.set_operator"
    },
    {
      "match": "\\b(let|axiom|define|theorem|type|structure|constraint|satisfy|inductive|class|attributes|numerals|typeclass|instance|extends|problem|todo|function)\\b",
      "name": "keyword.declaration"
    },
    {
      "match": "\\bimport\\b",
      "name": "keyword.import"
    },
    {
      "match": "\\bfrom\\b",
      "name": "keyword.from"
    },
    {
      "match": "\\b(true|false)\\b",
      "name": "keyword.constant"
    },
    {
      "match": "\\b(self|lib)\\b",
      "name": "variable.language"
    },
    {
      "match": "\\b[0-9]+\\b",
      "name": "constant.numeric"
    },
    {
      "match": "\\b\\p{Lowercase_Letter}\\w*\\b",
      "name": "variable"
    },
    {
      "match": "\\b\\p{Uppercase_Letter}\\w*\\b",
      "name": "entity.name.type"
    }
  ]
}
